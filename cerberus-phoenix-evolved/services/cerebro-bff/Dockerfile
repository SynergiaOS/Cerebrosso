# ğŸ§  Cerebro BFF - Multi-stage Dockerfile
# Optimized for production with minimal attack surface

# ğŸ—ï¸ Build stage
FROM rustlang/rust:nightly-slim as builder

# ğŸ“¦ Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ“ Copy source code and dependencies
COPY services/cerebro-bff .

# ğŸ—ï¸ Build the application
RUN cargo build --release

# ğŸš€ Runtime stage - Distroless for security
FROM gcr.io/distroless/cc-debian12:latest

# ğŸ“ Create app directory
WORKDIR /app

# ğŸ‘¤ Copy binary from builder stage
COPY --from=builder /app/target/release/cerebro-bff /usr/local/bin/cerebro-bff

# ğŸŒ Expose port
EXPOSE 3000

# ğŸ¥ Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD ["/usr/local/bin/cerebro-bff", "--health-check"] || exit 1

# ğŸš€ Run the application
ENTRYPOINT ["/usr/local/bin/cerebro-bff"]
