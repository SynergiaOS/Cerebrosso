# ğŸº Projekt Cerberus Phoenix v2.0 - Cerebro-BFF Dockerfile
# Multi-stage build dla optymalizacji rozmiaru obrazu

# ğŸ—ï¸ Build stage
FROM rust:latest as builder

# ğŸ“¦ Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ“‹ Copy dependency files first for better caching
COPY Cargo.toml Cargo.lock ./

# ğŸš€ Create dummy main.rs to build dependencies
RUN mkdir src && echo "fn main() {}" > src/main.rs

# ğŸ“¦ Build dependencies (this layer will be cached)
RUN cargo build --release && rm -rf src

# ğŸ“ Copy source code
COPY src ./src

# ğŸ—ï¸ Build the application
RUN cargo build --release

# ğŸš€ Runtime stage
FROM debian:bookworm-slim

# ğŸ“¦ Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ğŸ‘¤ Create non-root user
RUN groupadd -r cerebro && useradd -r -g cerebro cerebro

# ğŸ“ Create app directory
WORKDIR /app

# ğŸ“‹ Copy binary from builder stage
COPY --from=builder /app/target/release/cerebro-bff /usr/local/bin/cerebro-bff

# ğŸ” Set ownership and permissions
RUN chown cerebro:cerebro /usr/local/bin/cerebro-bff && \
    chmod +x /usr/local/bin/cerebro-bff

# ğŸ‘¤ Switch to non-root user
USER cerebro

# ğŸŒ Expose port
EXPOSE 8080

# ğŸ¥ Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# ğŸš€ Run the application
CMD ["cerebro-bff"]
