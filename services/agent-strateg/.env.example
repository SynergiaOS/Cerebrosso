# ðŸ‘‘ Agent-Strateg Environment Configuration
# Copy this file to .env and adjust values for your environment

# ===== SERVER CONFIGURATION =====
STRATEG_HOST=0.0.0.0
STRATEG_PORT=8100
STRATEG_WORKERS=4

# ===== SWARM CONFIGURATION =====
SWARM_COORDINATOR_URL=http://localhost:8090
STRATEG_AGENT_ID=strateg_1
STRATEG_HEARTBEAT_MS=5000
STRATEG_TASK_TIMEOUT_MS=30000
STRATEG_MAX_TASKS=10

# ===== AI MODELS CONFIGURATION =====
STRATEG_PRIMARY_MODEL=gpt-4
STRATEG_BACKUP_MODEL=claude-3
STRATEG_MAX_TOKENS=4096
STRATEG_TEMPERATURE=0.1
STRATEG_DECISION_THRESHOLD=0.8

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
GPT4_ENDPOINT=https://api.openai.com/v1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE3_ENDPOINT=https://api.anthropic.com/v1

# Local Models Configuration
LLAMA3_ENDPOINT=http://localhost:11434
LLAMA3_API_KEY=local

# ===== STRATEGY CONFIGURATION =====
STRATEG_MAX_GOALS=5
STRATEG_GOAL_TIMEOUT_MIN=30
STRATEG_DECISION_WEIGHT=0.4
STRATEG_RISK_TOLERANCE=0.3
STRATEG_PLANNING_HORIZON_H=24
STRATEG_DELEGATION_THRESHOLD=0.7

# ===== RISK MANAGEMENT =====
STRATEG_MAX_POSITION_SOL=10.0
STRATEG_MAX_DAILY_LOSS_SOL=1.0
STRATEG_STOP_LOSS_PCT=0.05
STRATEG_TAKE_PROFIT_PCT=0.15
STRATEG_MAX_POSITIONS=3
STRATEG_MIN_TRADE_CONFIDENCE=0.85

# ===== COMMUNICATION =====
REDIS_URL=redis://localhost:6379
STRATEG_MSG_BUFFER_SIZE=1000
STRATEG_COMM_TIMEOUT_MS=5000
STRATEG_RETRY_INTERVAL_MS=1000
STRATEG_MAX_RETRIES=3

# ===== MONITORING =====
STRATEG_METRICS_ENABLED=true
STRATEG_PROMETHEUS_PORT=9100
STRATEG_LOG_LEVEL=info
STRATEG_METRICS_INTERVAL_S=60

# ===== DEVELOPMENT SETTINGS =====
# Set to true for development mode
DEV_MODE=false

# Enable debug logging
DEBUG_ENABLED=false

# Mock AI responses (for testing)
MOCK_AI_RESPONSES=false

# ===== PERFORMANCE TARGETS =====
# Target decision accuracy (0.0 - 1.0)
TARGET_DECISION_ACCURACY=0.848

# Target goal completion rate (0.0 - 1.0)
TARGET_GOAL_COMPLETION_RATE=0.90

# Target delegation success rate (0.0 - 1.0)
TARGET_DELEGATION_SUCCESS_RATE=0.95
