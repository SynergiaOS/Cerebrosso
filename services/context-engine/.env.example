# ðŸ§  Context Engine (CEM) Configuration

# Server Configuration
CONTEXT_ENGINE_PORT=8200
CONTEXT_ENGINE_HOST=0.0.0.0
CONTEXT_ENGINE_WORKERS=4

# Memory Configuration
REDIS_URL=redis://localhost:6379
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=context_memory
EMBEDDING_VECTOR_SIZE=1536
MAX_MEMORY_ENTRIES=100000
MEMORY_TTL_SECONDS=86400
MEMORY_BATCH_SIZE=100

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_BATCH_SIZE=100
EMBEDDING_MAX_TOKENS=8192
EMBEDDING_TIMEOUT_SECONDS=30
USE_LOCAL_EMBEDDINGS=false

# Optimization Configuration
ENABLE_TF_IDF=true
ENABLE_CLUSTERING=true
ENABLE_DEDUPLICATION=true
CONTEXT_QUALITY_THRESHOLD=0.7
RELEVANCE_THRESHOLD=0.5
MAX_CONTEXT_SIZE=32768
SHUFFLE_HAYSTACK=true

# Feedback & Learning Configuration
ENABLE_LEARNING=true
LEARNING_RATE=0.01
FEEDBACK_WINDOW_HOURS=24
MIN_FEEDBACK_SAMPLES=10
PERSIST_FEEDBACK=true

# Knowledge Graph Configuration
ENABLE_KNOWLEDGE_GRAPH=true
MAX_GRAPH_NODES=10000
MAX_GRAPH_RELATIONSHIPS=50000
RELATIONSHIP_CONFIDENCE_THRESHOLD=0.8

# Monitoring Configuration
CONTEXT_METRICS_ENABLED=true
CONTEXT_PROMETHEUS_PORT=9200
CONTEXT_LOG_LEVEL=info
CONTEXT_METRICS_INTERVAL_S=60

# Development/Testing
RUST_LOG=context_engine=debug,info
RUST_BACKTRACE=1
