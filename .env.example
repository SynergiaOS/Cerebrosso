# 🔥 Cerberus Phoenix v2.0 - Environment Configuration
# Copy this file as .env and adjust values

# 🌐 Server Configuration
PORT=3000
HOST=0.0.0.0

# 🔗 Database Configuration
POSTGRES_DB=cerberus
POSTGRES_USER=cerberus
POSTGRES_PASSWORD=cerberus_pass
DATABASE_URL=postgresql://cerberus:cerberus_pass@postgres:5432/cerberus

# 🔴 Redis Configuration
REDIS_URL=redis://redis:6379

# 🧠 Qdrant Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=cerberus_context

# 🔐 Vault Configuration
VAULT_URL=http://vault:8200
VAULT_TOKEN=cerberus_root_token
VAULT_MOUNT_PATH=secret
VAULT_ENCRYPTION_KEY=cerberus_master_key

# 🌊 Helius Configuration
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_WEBHOOK_URL=http://localhost:8082/webhook/helius

# ⚡ QuickNode Configuration
QUICKNODE_RPC_URL=your_quicknode_rpc_url_here
QUICKNODE_API_KEY=your_quicknode_api_key_here

# 🚀 Jito Configuration
JITO_URL=https://mainnet.block-engine.jito.wtf
ENABLE_JITO=true

# 🤖 AI Configuration
FINLLAMA_API_URL=http://finllama:11434
DEEPSEEK_API_URL=http://deepseek:11434

# 🎯 Trading Configuration
MAX_POSITION_SIZE_SOL=0.1
MIN_LIQUIDITY_SCORE=0.5
MAX_RUG_PULL_SCORE=0.3
MAX_SLIPPAGE=0.05
PROFIT_TARGET=0.15
STOP_LOSS=0.1

# 📊 Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# 🔧 Development Configuration
RUST_LOG=info
RUST_BACKTRACE=1
ENVIRONMENT=development
