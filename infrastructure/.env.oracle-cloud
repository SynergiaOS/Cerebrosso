# ü•∑ Cerberus Phoenix v2.0 - Oracle Cloud Production Configuration
# Optimized for Oracle Cloud Free Tier with Multi-RPC cost optimization

# üîë API Keys & Authentication (CONFIGURE THESE!)
HELIUS_API_KEY=your_helius_api_key_here
QUICKNODE_API_KEY=your_quicknode_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here
GENESYS_API_KEY=your_genesys_api_key_here
CHAINBASE_API_KEY=your_chainbase_api_key_here

# üîî Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com
HELIUS_WEBHOOK_SECRET=your_webhook_secret_here

# üóÑÔ∏è Database Configuration (Oracle Cloud optimized)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cerberus
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CerberusPhoenix2024!SecurePassword

# üî¥ Redis Configuration
REDIS_URL=redis://localhost:6380
REDIS_TTL=300
REDIS_MAX_CONNECTIONS=50

# üîç Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=cerberus_context
QDRANT_API_KEY=

# üîí Security & Secrets (Oracle Cloud KMS)
VAULT_URL=http://localhost:8201
VAULT_TOKEN=cerberus_vault_token_2024
VAULT_MOUNT_PATH=secret

# üîÑ Multi-RPC Configuration
RPC_ROUTING_STRATEGY=cost_optimized
ENABLE_RPC_FAILOVER=true
RPC_HEALTH_CHECK_INTERVAL=300
RPC_TIMEOUT_SECONDS=30

# üìä API Usage Monitoring
HELIUS_MONTHLY_LIMIT=1000000
QUICKNODE_MONTHLY_LIMIT=100000
ALCHEMY_MONTHLY_LIMIT=100000
GENESYS_MONTHLY_LIMIT=1000000
API_USAGE_ALERT_THRESHOLD=0.8
COST_TRACKING_ENABLED=true

# üåä Solana Stream Configuration
SOLANA_WEBSOCKET_URL=wss://api.mainnet-beta.solana.com/
STREAM_RECONNECT_ATTEMPTS=10
STREAM_PING_INTERVAL=30000
STREAM_BUFFER_SIZE=1000

# üíæ Cache Configuration (Oracle Cloud optimized)
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=5000
CACHE_CLEANUP_INTERVAL=3600
CACHE_HOT_TTL=60
CACHE_WARM_TTL=300
CACHE_COLD_TTL=1800
CACHE_FROZEN_TTL=7200

# üéØ Trading Configuration
DEFAULT_RISK_TOLERANCE=0.7
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.15
MAX_DAILY_TRADES=50
MAX_CONCURRENT_POSITIONS=5
MIN_LIQUIDITY_USD=10000
SLIPPAGE_TOLERANCE=0.01
PRIORITY_FEE_LAMPORTS=5000

# üìä Monitoring & Logging
RUST_LOG=info
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# üîß Performance Tuning (Oracle Cloud A1 Flex optimized)
TOKIO_WORKER_THREADS=4
TOKIO_BLOCKING_THREADS=8
HTTP_TIMEOUT_SECONDS=30
HTTP_MAX_CONNECTIONS=500
HTTP_KEEP_ALIVE_SECONDS=60
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=2
DATABASE_TIMEOUT_SECONDS=30

# üéõÔ∏è Feature Flags
ENABLE_AI_DECISION_ENGINE=true
ENABLE_PUMP_FUN_SCANNER=true
ENABLE_RISK_ANALYSIS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_LIVE_TRADING=true
ENABLE_ARBITRAGE=true
ENABLE_CIRCUIT_BREAKERS=true
ENABLE_POSITION_LIMITS=true

# üåê Oracle Cloud Specific
OCI_REGION=eu-frankfurt-1
OCI_COMPARTMENT_OCID=your_compartment_ocid_here
OCI_VAULT_ID=your_vault_id_here

# üîê SSL/TLS Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# üìß Alerting Configuration
ALERT_EMAIL=admin@your-domain.com
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
